@require './vars.styl'

*
  box-sizing border-box

html
body
  height 100%
:global #root
  height 100%

body
  background main
  font-family system
  color darken(white, 10%)
  font-size 18px

h1
  margin 20px 0

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

.page
  padding 20px

.siteTitle
  display flex
  align-items center

  +below(420px)
    display block

  img
    display inline-block
    width 80px
    height 80px
    margin-right 20px

    +below(420px)
      display block
      margin 0 auto

.App
  background black
  min-width 320px
  height 100%

  h1
    color white
    font-weight 300
    font-size 52px

  p
    color white
    margin-bottom 20px

.nav
  background darken(black, 10%)
  padding-left 20px

  a
    display inline-block
    padding 20px
    text-transform uppercase
    text-decoration none
    color darken(white, 20%)
    &:hover
      color white

  .active
    background black

.cta
  btn()

.NotFound
  text-align center
