@require './vars.styl'

app-bg = #171B23

*
  box-sizing border-box

html
body
  height 100%
:global #root
  height 100%

body
  background app-bg
  font-family system
  color darken(white, 10%)
  font-size 18px

h1
  margin 20px 0

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

.page
  padding 20px

.siteTitle
  display flex
  align-items center

  +below(420px)
    display block

  img
    display inline-block
    width 80px
    height 80px
    margin-right 20px

    +below(420px)
      display block
      margin 0 auto

.App
  background app-bg
  min-width 320px
  height 100%
  display flex
  flex-direction column

  h1
    color #90a4ae
    font-weight 300
    font-size 52px

  p
    color white
    margin-bottom 20px

.nav
  background #324244
  padding-left 20px
  flex-grow 0
  flex-shrink 0

  a
    display inline-block
    padding 15px
    text-transform uppercase
    text-decoration none
    color accent
    font-weight 300
    font-size 14px
    &:hover
      color white

  .active
    background #00695c
    color white

.routeHandler
  flex 1 100%
  overflow auto

.cta
  btn()
  btn-green()

.NotFound
  text-align center
