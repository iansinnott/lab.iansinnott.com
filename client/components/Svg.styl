@require './vars.styl'

.Box
.GridBox
  h4
    color header-green
    font-weight 300

.hoverBadge
  background #47287d
  color #e8e8e8
  margin-left 20px
  padding 3px 5px
  border-radius 3px
  font-weight 500
  font-size 11px

.btn
  btn()
  btn-gray()
  btn-small()
  &:hover
    i
      color purple

.disabled
  uninteractive()
  btn-disabled()

.Select
  display inline-block
  position relative
  align-items center
  &:hover
    i
      color purple

  i
    color transparentify(#f5f8fa, 0.8)
    vertical-align middle
    font-size 1em
    tween all quick

  i:last-child
    position absolute
    top 50%
    right 10px
    transform translateY(-50%)

.sel
  sel()
  btn-gray()

.upper
  display flex
  align-items center
  justify-content space-between

.control
  margin-left 10px
